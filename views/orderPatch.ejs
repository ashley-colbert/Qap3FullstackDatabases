<html lang="en">
  <%- include('./header.ejs') %>
  <body>
    <%- include('./navBar.ejs') %>
    <div>
      <form action="/orders/<%= locals.theId %>?_method=PATCH" method="POST">
        <h2>Edit Order Information</h2>
        <label
          >Order date(yyyy/dd/mm)
          <input
            type="text"
            name="orderDate"
            value="<%= locals.orderDate %>"
            required
          /> </label
        ><br />
        <label
          >Quantity ordered
          <input
            type="text"
            name="quantityOrdered"
            value="<%= locals.quantityOrdered %>"
            required
          /> </label
        ><br />
        <label
          >Staff ID
          <input
            type="text"
            name="staffID"
            value="<%= locals.staffID %>"
            required
          /> </label
        ><br />
        <label
          >Item ID
          <input
            type="text"
            name="itemID"
            value="<%= locals.itemID %>"
            required
          /> </label
        ><br /><br />
        <button>PATCH</button>
      </form>
    </div>
  </body>
</html>
