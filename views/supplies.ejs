<html lang="en">
  <%- include('./header.ejs') %>
    <body>
      <%- include('./navBar.ejs') %>
      <div class="">
            <form action="/supplies" method="POST">
                <b>Supplies: </b></br>
            <% if (theItem.length > 0) { %>
                <% theItem.forEach(item => { %>
                    <b>Item ID:</b> <%= item.itemID%><br>
                    <b>Item name:</b> <%= item.name %> <br>
                    <b>Quantity:</b> <%= item.quantity%><br>
                    <b>Reorder Point:</b> <%= item.reorderPoint%><br>
                    <b>Department:</b> <%= item.department%><br>
                    
                    <a href="/supplies/<%=item.itemID%>/edit?name=<%=item.name%>&quantity=<%=item.quantity%>&reorderPoint=<%=item.reorderPoint%>&department=<%item.department%>">edit</a>
                    <a href="/supplies/<%=item.itemID%>/delete?name=<%=item.name%>&quantity=<%=item.quantity%>&reorderPoint=<%=item.reorderPoint%>&department=<%= item.department%>">delete</a>
                    <a href="/supplies/<%=item.itemID%>/replace??name=<%=item.name%>&quantity=<%=item.quantity%>&reorderPoint=<%=item.reorderPoint%>&department=<%item.department%>">replace</a></br>
                    <% }) %>
            <% } %>
            </br><label>Add Item:</label></br>
            <label>Item ID:
              <input type="text" id="itemID" name="itemID" value="<%= locals.itemID %>" required>
          </label><br>
            <label>Item Name:
                <input type="text" id="name" name="name" value="<%= locals.name %>" required>
            </label><br>
            <label>Quantity:
                <input type="text" id="quantity" name="quantity" value="<%= locals.quantity %>" required>
            </label>
            </br>
            <label>Reorder Point:
              <input type="text" id="reorderPoint" name="reorderPoint" value="<%= locals.reorderPoint %>" required>
          </label>
          </br>
          <label>Department:
            <input type="text" id="department" name="department" value="<%= locals.department %>" required>
        </label>
        </br>
            <button>POST</button>
        </form>
        </div>
    </body>
</html>
