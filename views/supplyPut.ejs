<html lang="en">
  <%- include('./header.ejs') %>
  <body>
    <%- include('./navBar.ejs') %>
    <div>
      <form action="/supplies/<%= locals.theId %>?_method=PUT" method="POST">
        <h2>Edit Supplies:</h2>
        <label
          >Product Name:
          <input type="text" name="name" value="<%= locals.name %>" required />
        </label>
        <label
          >Quantity
          <input
            type="text"
            name="quantity"
            value="<%= locals.quantity %>"
            required
          />
        </label>
        <label
          >Reorder point
          <input
            type="text"
            name="reorderPoint"
            value="<%= locals.reorderPoint %>"
            required
          />
        </label>
        <label
          >Department
          <input
            type="text"
            name="department"
            value="<%= locals.department %>"
            required
          /> </label
        ><br />
        <button>PUT</button>
      </form>
    </div>
  </body>
</html>
