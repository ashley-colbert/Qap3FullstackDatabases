<html lang="en">
  <%- include('./header.ejs') %>
  <body>
    <%- include('./navBar.ejs') %>
    <div>
      <form action="/staff/<%= locals.theId %>?_method=PATCH" method="POST">
        <h2>Edit Staff Member:</h2>
        <label
          >Name
          <input
            type="text"
            name="name"
            value="<%= locals.name %>"
            required
          /> </label
        ><br />
        <label
          >Street Address
          <input
            type="text"
            name="streetAdd"
            value="<%= locals.streetAdd %>"
            required
          /> </label
        ><br />
        <label
          >City
          <input
            type="text"
            name="city"
            value="<%= locals.city %>"
            required
          /> </label
        ><br />
        <label
          >Province
          <input
            type="text"
            name="prov"
            value="<%= locals.prov %>"
            required
          /> </label
        ><br />
        <label
          >Phone
          <input
            type="text"
            name="phone"
            value="<%= locals.phone %>"
            required
          /> </label
        ><br />
        <label
          >Email
          <input
            type="text"
            name="email"
            value="<%= locals.email %>"
            required
          /> </label
        ><br /><br />
        <button>Edit</button>
      </form>
    </div>
  </body>
</html>
